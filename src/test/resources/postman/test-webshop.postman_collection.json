							"script": {
								"exec": [
									"pm.test(\"Response code is 'ok'\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"    pm.response.to.be.ok;\r",
									"    pm.response.to.be.withBody;\r",
									"    pm.response.to.be.json;\r",
									"});\r",
									"\r",
									"pm.test(\"Content-Type is present\", function () {\r",
									"    pm.response.to.have.header(\"Content-Type\");\r",
									"});\r",
									"\r",
									"pm.test(\"Schema is valid\", function () {\r",
									"    var schema = {\r",
									"        \"type\": \"array\",\r",
									"        \"items\": [\r",
									"            {\r",
									"                \"type\": \"object\",\r",
									"                \"properties\": {\r",
									"                    \"name\": {\r",
									"                        \"type\": \"string\"\r",
									"                    },\r",
									"                    \"preis\": {\r",
									"                        \"type\": \"number\"\r",
									"                    }\r",
									"                },\r",
									"                \"required\": [\r",
									"                    \"name\",\r",
									"                    \"preis\"\r",
									"                ]\r",
									"            }\r",
									"        ]\r",
									"    };\r",
									"    var data = JSON.parse(responseBody);\r",
									"    pm.expect(tv4.validate(data, schema)).to.be.true;\r",
									"});\r",
									"\r",
									"const expectedNames = [ \"Salat\", \"Bowl\", \"Ciabatta\", \"Getränk\", \"Dip\", \"Dressing\" ];\r",
									"\r",
									"pm.test(\"Content is valid\", function () {\r",
									"    var data = JSON.parse(responseBody);\r",
									"    _.each(data, (item) => {\r",
									"        pm.expect(item.name).to.be.oneOf(expectedNames);\r",
									"    })\r",
									"    pm.expect(data.length).to.be.eq(expectedNames.length);\r",
									"});"
